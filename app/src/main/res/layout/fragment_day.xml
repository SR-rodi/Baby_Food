<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".feature_day.DayFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back_day_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_data_pick"
                app:fabSize="mini" />

            <TextView
                android:id="@+id/data"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="01.01.2023" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/next_day_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_data_pick"
                android:rotation="180"
                app:fabSize="mini" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <com.example.artyomkafood.core.castomView.MenuItem
        android:id="@+id/item_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="25dp"
        android:animateLayoutChanges="true"
        app:menu_icon="@drawable/ic_breakfast"
        app:menu_text="Завтрак" />

    <com.example.artyomkafood.core.castomView.MenuItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="25dp"
        app:menu_icon="@drawable/ic_dinner"
        app:menu_text="Обед" />

    <com.example.artyomkafood.core.castomView.MenuItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="25dp"
        app:menu_icon="@drawable/ic_rice"
        app:menu_text="Ужин" />

    <com.example.artyomkafood.core.castomView.MenuItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="25dp"
        app:menu_icon="@drawable/ic_apple"
        app:menu_text="Перекус" />


</LinearLayout>