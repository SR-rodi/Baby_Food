<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dayFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.artyomkafood.feature_init.presentation.category.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_foodFragment"
            app:destination="@id/foodFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.artyomkafood.feature_init.presentation.food.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" >
        <argument android:name="category_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_foodFragment_to_mealFragment"
            app:destination="@id/mealFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.example.artyomkafood.feature_init.presentation.meal.MealFragment"
        android:label="fragment_meal"
        tools:layout="@layout/fragment_meal" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/dayFragment"
        android:name="com.example.artyomkafood.feature_food.presentation.day.DayFragment"
        android:label="fragment_day"
        tools:layout="@layout/fragment_day" >
        <action
            android:id="@+id/action_dayFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.artyomkafood.feature_food.presentation.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <argument
            android:name="date"
            app:argType="long" />
        <argument
            android:name="scheduleId"
            app:argType="integer" />
    </fragment>
</navigation>