<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArtyomkaFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/DialogThem</item>
    </style>

    <style name="expandedBarTextStyle" parent="Theme.ArtyomkaFood">

        <item name="android:alpha">0</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="DialogThem" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

</resources>